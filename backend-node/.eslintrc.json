{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [
    "jest.config.js",
    "webpack.config.js",
    "**/dist/*.js"
  ],
  "rules": {
    "linebreak-style": "off",
    "no-console": "off",
    "prefer-destructuring": "off",
    "prefer-arrow-callback": "off",
    "func-names": "off",
    "arrow-parens": "off",
    "dot-notation": "off",
    "import/prefer-default-export": "off",
    "import/first": "off",
    "no-template-curly-in-string": "off",
    "new-cap": [
      "error",
      {
        "capIsNew": false
      }
    ],
    "array-callback-return": "error",
    "object-shorthand": [
      "error",
      "consistent"
    ],
    "function-paren-newline": [
      "error",
      "consistent"
    ],
    "quote-props": [
      "error",
      "as-needed"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "operator-linebreak": [
      "error",
      "before"
    ],
    "no-var": "error",
    "prefer-template": "error",
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "id-length": "error",
    "newline-before-return": "error",
    "space-before-blocks": "error"
  }
}